{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*",
    "resources/**/*",
    "generated/**/*",
    "tests/**/*",
    "src/scripts"
  ],
  "exclude": ["node_modules"]
}
